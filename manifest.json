{
  "name":"Answerius",
  "version":"0.1",
  "manifest_version": 2,
  "description":"New anon search engine",
  "browser_action": {
    "default_title": "Answerius",
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.lukol.com/*", "https://duckduckgo.com/*", "https://searx.be/*", "https://search.brave.com/*", "https://www.google.ru/*", "https://www.google.com/*"],
      "js": ["content.js"],
      "css": [ "buttons.css" ]
    }
  ],
  "permissions":[
      "contextMenus", 
      "tabs",
      "webRequest",
      "webRequestBlocking",
      "webNavigation",
      "tabs",
      "http://*/*",
      "https://*/*"
      ],
  "icons":{
    "16": "images/logo.png"
  }
}